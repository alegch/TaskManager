<p>
  <b>Name:</b>
  <%= @story.name %>
</p>

<p>
  <b>Text:</b>
  <%= @story.text %>
</p>

<p>
  <b>Reciver:</b>
  <%= @story.reciver_id %>
</p>

<p>
  <b>Sender:</b>
  <%= @story.sender_id %>
</p>

<p>
  <b>State:</b>
  <%= @story.state_name %>
</p>

<H3> Comments </H3>

<div id='list_comments'>
  <% @story.comments.each do |comment| -%>
    <% if comment.persisted?  %>
      <%= render comment %>
    <% end %>
  <% end -%>
</div>

<div id='comment_form'>
  <%= render 'comments/form', story: @story, comment: @comment %>
</div>

<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Back', stories_path %>
