%h1
  = t('.title')
%p
  %b Name:
  = @story.name
%p
  %b Text:
  = @story.text
%p
  %b Reciver:
  = @story.reciver_id
%p
  %b Sender:
  = @story.sender_id
%p
  %b State:
  = @story.state_name
%h3 
  = t('.comments')
#list_comments
  - @story.comments.each do |comment|
    = render comment
#comment_form
  = render 'web/comments/form', story: @story, comment: @story.comments.build

= link_to  t('.edit'), edit_story_path(@story)
|
= link_to t('.back'), stories_path
