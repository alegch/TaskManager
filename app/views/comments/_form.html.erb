<%= simple_form_for(comment, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :commenter %>
    <%= f.input :body, :input_html => { :rows => 5 }%>
  </div>

  <%= f.input :story_id, :as => :hidden, :input_html => { :value => story_id  } %>

  <%= f.button :submit %>

<% end %>
